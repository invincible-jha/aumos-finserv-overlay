# ============================================================
# aumos-finserv-overlay â€” Environment Variables
# Copy to .env and fill in values for local development.
# NEVER commit .env to version control.
# ============================================================

# Service identity
AUMOS_FINSERV_SERVICE_NAME=aumos-finserv-overlay
AUMOS_FINSERV_DEBUG=false

# Database (Postgres / asyncpg)
AUMOS_FINSERV_DATABASE__HOST=localhost
AUMOS_FINSERV_DATABASE__PORT=5432
AUMOS_FINSERV_DATABASE__NAME=aumos_finserv
AUMOS_FINSERV_DATABASE__USER=aumos
AUMOS_FINSERV_DATABASE__PASSWORD=changeme

# Kafka
AUMOS_FINSERV_KAFKA__BOOTSTRAP_SERVERS=localhost:9092
AUMOS_FINSERV_KAFKA__SECURITY_PROTOCOL=PLAINTEXT

# Auth / JWT
AUMOS_FINSERV_AUTH__JWT_SECRET=changeme-use-strong-secret
AUMOS_FINSERV_AUTH__JWT_ALGORITHM=HS256
AUMOS_FINSERV_AUTH__TOKEN_EXPIRY_MINUTES=60

# SOX compliance settings
AUMOS_FINSERV_SOX_EVIDENCE_RETENTION_DAYS=2555
AUMOS_FINSERV_SOX_CONTROL_FRAMEWORK=COSO
AUMOS_FINSERV_SOX_AUDIT_TRAIL_ENABLED=true

# SEC AI guidance
AUMOS_FINSERV_SEC_AI_GUIDANCE_VERSION=2024-01
AUMOS_FINSERV_SEC_DISCLOSURE_MATERIALITY_THRESHOLD=0.05

# SR 11-7 model risk
AUMOS_FINSERV_SR117_VALIDATION_REQUIRED=true
AUMOS_FINSERV_SR117_MODEL_INVENTORY_ENABLED=true
AUMOS_FINSERV_SR117_HIGH_RISK_THRESHOLD=0.7

# PCI DSS
AUMOS_FINSERV_PCI_DSS_VERSION=4.0
AUMOS_FINSERV_PCI_SCAN_TIMEOUT_SECONDS=300
AUMOS_FINSERV_PCI_ENCRYPTION_ALGORITHM=AES-256-GCM

# DORA
AUMOS_FINSERV_DORA_ICT_REGISTER_ENABLED=true
AUMOS_FINSERV_DORA_RTO_THRESHOLD_HOURS=4
AUMOS_FINSERV_DORA_RPO_THRESHOLD_HOURS=1
AUMOS_FINSERV_DORA_INCIDENT_REPORTING_HOURS=4

# Synthetic transactions
AUMOS_FINSERV_SYNTH_MAX_TRANSACTIONS_PER_REQUEST=1000000
AUMOS_FINSERV_SYNTH_FRAUD_RATE_DEFAULT=0.02
AUMOS_FINSERV_SYNTH_OUTPUT_BUCKET=aumos-finserv-synth

# Regulatory reporting
AUMOS_FINSERV_REPORT_OUTPUT_BUCKET=aumos-finserv-reports
AUMOS_FINSERV_REPORT_TEMPLATE_DIR=/app/templates/reports
